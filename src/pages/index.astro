---
import "../styles/global.css";
import { getCollection } from "astro:content";

import Navigation from "../components/Navigation.astro";
import Head from "../components/Head.astro";
import Analytics from "../components/Analytics.astro";
import ArrowDown from "../components/icons/ArrowDown.astro";
import Footer from "../components/Footer.astro";
import LandingBackground from "../components/assets/LandingBackground.astro";

const unsortedarticles = await getCollection("blog");
const articles = unsortedarticles.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
const schema = JSON.stringify({
    "@context": "https://schema.org/",
    "@type": "WebSite",
    name: "Webry",
    url: "https://www.webry.com/",
});
---

<html lang="en">
    <head>
        <Head />
        <title>Webry | The Modern Web Blog</title>
        <meta
            name="description"
            content="Welcome to The Modern Web Blog. Here you will find articles on modern web development, best practices, and more."
        />
        <link rel="canonical" href="https://www.webry.com/" />
        <script type="application/ld+json" set:html={schema}></script>
        <Analytics />
    </head>
    <body>
        <Navigation />
        <section class="hero">
            <h1>
                <span class="hero__before">Welcome to</span>
                <span>My <em>Modern</em> Web Blog</span>
            </h1>
        </section>
        <main>
            <LandingBackground />
            <div class="container">
                <section class="articles">
                    <div class="articles_header">
                        <h2 class="articles__title">articles</h2>
                        <div class="articles__arrow">
                            <ArrowDown />
                        </div>
                    </div>
                    <div class="articles__grid">
                        {
                            articles.map((post) => (
                                <article class="card">
                                    <a
                                        aria-label={`Go to the post: ${post.data.title}`}
                                        href={`/article/${post.slug}`}
                                    >
                                        <img
                                            src={post.data.cover}
                                            alt="JSDoc Typing"
                                            class="card-img"
                                        />
                                    </a>
                                    <div class="card__content flow-content">
                                        <h2 class="card-title">
                                            <a
                                                aria-label={`Go to the post: ${post.data.title}`}
                                                href={`/article/${post.slug}`}
                                            >
                                                {post.data.title}
                                            </a>
                                        </h2>
                                        <p class="card-description">
                                            {post.data.share.description}
                                        </p>
                                        <a
                                            class="btn card-button"
                                            aria-label={`Go to the post: ${post.data.title}`}
                                            href={`/article/${post.slug}`}
                                        >
                                            Read more
                                        </a>
                                    </div>
                                </article>
                            ))
                        }
                    </div>
                </section>
            </div>
        </main>
        <Footer />

        <style>
            /* HERO */

            .hero {
                display: flex;
                align-items: center;
                justify-content: center;
                text-transform: uppercase;
                text-align: center;
                height: calc(100vh - var(--header-height) * 2);
                background: url("/assets/hero-background-mobile.svg") no-repeat center bottom;
                background-size: cover;
                color: var(--color-white);
            }

            .hero h1 {
                transform: translateY(-10vh);
            }

            @media (min-width: 1080px) {
                .hero {
                    --clip-path-size-factor: 2; 
                    background: url("/assets/hero-background.svg") no-repeat center center;
                    background-size: cover;
                }
            }
            
            @media (min-width: 1440px) {
                .hero {
                    --clip-path-size-factor: 2.5; 
                }
            }

            .hero__before {
                display: block;
                font-size: var(--p-font-size);
                color: var(--color-gray-500);
            }

            .articles_header {
                height: var(--header-height);
                display: flex;
                flex-direction: column;
                transform: translateY(-3vh);
            }

            .articles__arrow {
                margin: var(--padding-small) auto;
                display: block;
            }
        </style>
        <script>
            import "../scripts/background.ts";
        </script>
    </body>
</html>
